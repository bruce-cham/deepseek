    <script>
        // Display current date
        const now = new Date();
        document.getElementById('current-date').textContent = now.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
        });
        
        // Simulate loading animation
        document.addEventListener('DOMContentLoaded', function() {
            const timeValue = document.querySelector('.time-value');
            const performanceRating = document.querySelector('.performance-rating');
            
            // Animate the number counting up
            let startTime = 0;
            const endTime = 480;
            const duration = 2000;
            const increment = endTime / (duration / 16);
            
            function updateNumber() {
                startTime += increment;
                if (startTime < endTime) {
                    timeValue.textContent = Math.round(startTime);
                    setTimeout(updateNumber, 16);
                } else {
                    timeValue.textContent = endTime;
                }
            }
            
            setTimeout(updateNumber, 500);
        });
    </script>
